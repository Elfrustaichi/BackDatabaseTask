@model Service
@{
    ViewData["Title"] = "Detail";
}

<section id="services" class="services">
    <div class="container">

        <div class="row">
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 @(Model.Id==2?"mt-md-0":"")@(Model.Id==3?"mt-lg-0":"")">
                <div class="icon-box">
                    <div class="icon"><i class="@Model.Icon"></i></div>
                    <h4><a href="">@Model.Header</a></h4>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>

    </div>
</section><!-- End Services Section -->